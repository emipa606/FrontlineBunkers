<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--============== Bunkerembrasure South/West ===============-->
  <ThingDef ParentName="BuildingBase" Name="BunkerembrasureSW">
    <defName>BunkerembrasureSW</defName>
    <label>Bunker-Embrasure South/West</label>
    <thingClass>Building</thingClass>
    <category>Building</category>
    <researchPrerequisites>
      <li>Bunker1</li>
    </researchPrerequisites>
    <description>A waist-high impassable bunkerwall. It's possible to shoot over it. Provides some cover.</description>
    <graphicData>
      <texPath>Bunker/bunkerembrasure/bunkerembrasureSW_atlas</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <linkType>CornerFiller</linkType>
      <linkFlags>
        <li>Custom6</li>
      </linkFlags>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
        <edgeTop>Damage/Edge</edgeTop>
        <edgeBot>Damage/Edge</edgeBot>
        <edgeLeft>Damage/Edge</edgeLeft>
        <edgeRight>Damage/Edge</edgeRight>
      </damageData>
    </graphicData>
    <uiIconPath>Bunker/bunkerembrasure/bunkerembrasureSW_Icon</uiIconPath>
    <statBases>
      <MaxHitPoints>1500</MaxHitPoints>
      <WorkToBuild>1000</WorkToBuild>
      <Flammability>0.0</Flammability>
    </statBases>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <altitudeLayer>Building</altitudeLayer>
    <passability>Impassable</passability>
    <blockWind>true</blockWind>
    <castEdgeShadows>true</castEdgeShadows>
    <fillPercent>0.7</fillPercent>
    <disableImpassableShotOverConfigError>true</disableImpassableShotOverConfigError>
    <coversFloor>true</coversFloor>
    <placingDraggableDimensions>1</placingDraggableDimensions>
    <tickerType>Never</tickerType>
    <rotatable>false</rotatable>
    <selectable>true</selectable>
    <neverMultiSelect>true</neverMultiSelect>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <holdsRoof>true</holdsRoof>
    <designationCategory>Bunker</designationCategory>
    <staticSunShadowHeight>1.0</staticSunShadowHeight>
    <blockLight>true</blockLight>
    <canOverlapZones>false</canOverlapZones>
    <costStuffCount>12</costStuffCount>
    <stuffCategories>
      <li>Stony</li>
    </stuffCategories>
    <costList>
      <Steel>10</Steel>
    </costList>
    <building>
      <isInert>true</isInert>
      <blueprintGraphicData>
        <texPath>Bunker/bunkerembrasure/bunkerembrasureSW_blueprint_atlas</texPath>
      </blueprintGraphicData>
    </building>
    <damageMultipliers>
      <li>
        <damageDef>Bomb</damageDef>
        <multiplier>2</multiplier>
      </li>
    </damageMultipliers>
  </ThingDef>
