<Defs>
  <!-- ========== LMG ========== -->
  <ThingDef Name="BK_AmmoLMG">
    <thingClass>ThingWithComps</thingClass>
    <category>Item</category>
    <resourceReadoutPriority>Middle</resourceReadoutPriority>
    <useHitPoints>true</useHitPoints>
    <selectable>true</selectable>
    <tickerType>Rare</tickerType>
    <altitudeLayer>Item</altitudeLayer>
    <stackLimit>10</stackLimit>
    <alwaysHaulable>true</alwaysHaulable>
    <drawGUIOverlay>true</drawGUIOverlay>
    <pathCost>15</pathCost>
    <defName>BK_AmmoLMG</defName>
    <label>Catridge belt for MG 08/15</label>
    <description>Catridge belt for MG 08/15</description>
    <soundInteract>Standard_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
    <graphicData>
      <texPath>Things/Building/Mounted/Ammo/LMG/BK_Cartridgebelt_LMG</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <MaxHitPoints>50</MaxHitPoints>
      <MarketValue>10</MarketValue>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>1.5</DeteriorationRate>
      <Mass>8.5</Mass>
    </statBases>
    <thingCategories>
      <li>AmmoUITR</li>
    </thingCategories>
    <comps>
      <li Class="CompProperties_Forbiddable" />
    </comps>
  </ThingDef>
